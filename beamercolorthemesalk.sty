% Salk Institute color theme
% Based on Gemini theme

% ====================
% Definitions
% ====================

\definecolor{salkdarkgrey}{RGB}{60, 60, 60}
\definecolor{salkblue}{RGB}{75, 110, 151}
\definecolor{salklightgrey}{RGB}{245, 245, 245}
\definecolor{salkwhite}{RGB}{255, 255, 255}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=salkblue}

% Headline
\setbeamercolor{headline}{fg=salkwhite,bg=salkdarkgrey}
\setbeamercolor{headline title}{fg=salkwhite}
\setbeamercolor{headline author}{fg=salkwhite}
\setbeamercolor{headline institute}{fg=salkwhite}
\setbeamercolor{headline rule}{bg=salkblue}

% Block
\setbeamercolor{block title}{fg=salkblue,bg=white}
\setbeamercolor{block separator}{bg=salkblue}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=salkwhite,bg=salkblue}
\setbeamercolor{block alerted separator}{bg=salkdarkgrey}
\setbeamercolor{block alerted body}{fg=black,bg=salklightgrey}

% Example Block
\setbeamercolor{block example title}{fg=salkwhite,bg=salkblue}
\setbeamercolor{block example separator}{bg=salkdarkgrey}
\setbeamercolor{block example body}{fg=black,bg=salklightgrey}

% Heading
\setbeamercolor{heading}{fg=salkdarkgrey}

% Itemize
\setbeamercolor{item}{fg=salkblue}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}

% Footer
\setbeamercolor{footline}{fg=salkwhite,bg=salkblue}
